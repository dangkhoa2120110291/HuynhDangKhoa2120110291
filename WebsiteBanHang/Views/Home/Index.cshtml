@model WebsiteBanHang.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div class="hero-slide owl-carousel site-blocks-cover">
    <div class="intro-section" style="background-image: url('/Content/images/banner1.png');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>các dòng sản phẩm IPHONE</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="intro-section" style="background-image: url('/Content/images/banner3.png');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>ipad SASUNG</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="intro-section" style="background-image: url('/Content/images/banner4.png');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>laptop Acer nitro 5</h1>
                </div>
            </div>
        </div>
    </div>
</div>



<div></div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-12">
                <h2 class="section-title-underline mb-5">
                    <span>Các sản phẩm mới</span>
                </h2>
            </div>
        </div>
        <div class="row">
            <aside class="col-md-3">
                <nav class="list-group">
                    <a>Danh Mục</a>
                    @foreach (var item in Model.ListCategory)
                    {
                        <a class="list-group-item" href="@Url.Action("Index", "ListingGrid", new { categoryId = item.Id })">
                            @item.Name
                        </a>
                    }
                    <a class="list-group-item" href="@Url.Action("Index", "ListingGridAll")">
                        Tất cả sản phẩm
                    </a>
                </nav>
            </aside>
            <section class="col-md-9">
                <div class="row">
                    @for (var i = 0; i < Model.ListProduct.Count && i < 8; i++)
                    {
                        var item = Model.ListProduct[i];
                        <div class="col-xl-3 col-lg-3 col-md-4 col-6 mb-4">
                            <!-- Thêm lớp mb-4 để tạo khoảng cách dưới -->
                            <div class="card card-product-grid">
                                <a href="@Url.Action("Detail", "Product", new { @id = item.Id })" class="img-wrap">
                                    <img src="~/Content/images/@item.Avatar" alt="Avatar" height="150" width="150">
                                </a>
                                <figcaption class="info-wrap">
                                    <div>
                                        <a href="#" class="text-muted">
                                            @item.Name
                                        </a>
                                    </div>
                                    <div class="price h5 mt-2">
                                        <a href="#" class="price">
                                            @item.Price$
                                        </a>
                                    </div>
                                </figcaption>
                            </div>
                        </div>
                    }


                </div>
            </section>
        </div>
    </div>
</div>



<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Sản phẩm bán chạy </span>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-slide-3 owl-carousel">
                    @foreach (var item in Model.ListProduct)
                    {
                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="@Url.Action("Detail", "Product", new { @id = item.Id })"><img src="~/Content/images/@item.Avatar" height="280" width="150"></a>
                                <div class="price">@item.Price$</div>
                                <div class="category"><h3>@item.Name</h3></div>
                            </figure>
                            <div class="course-1-content pb-4">
                                <p><a href="@Url.Action("Detail", "Product", new { @id = item.Id })" class="btn btn-primary rounded-0 px-4">Xem chi tiết</a></p>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>



<div class="site-section ftco-subscribe-1" style="background-image: url('~/Content/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2>Subscribe to us!</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia,</p>
            </div>
            <div class="col-lg-5">
                <form action="" class="d-flex">
                    <input type="text" class="rounded form-control mr-2 py-3" placeholder="Enter your email">
                    <button class="btn btn-primary rounded py-3 px-4" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>


